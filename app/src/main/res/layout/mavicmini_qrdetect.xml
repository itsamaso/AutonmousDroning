<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dji.sdk.sample.demo.lookat.BaseCameraViewMavicMini
        android:id="@+id/base_camera"
        style="@style/main_camera_view"
        android:layout_width="392dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_Altitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_local_airport_24"
            android:text="Altitude: --"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_battery_full_24"
            android:text="Battery: --%"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/zxing_viewfinder_laser"
            android:textSize="16sp" />
        <Button
        android:id="@+id/btn_Move_to_QR"
        style="@style/common_button"
        android:text="@string/do_look_at" />
    </LinearLayout>

</LinearLayout>
